<!DOCTYPE html>
<html lang="es">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Registro</title>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
      <style>
        .content-title{
          color: blue;
        }
      </style>
  </head>
  <body>
    <div class="container mt-3">
      <div class="jumbotron">
          <h2 class="content-title">Registro de Usuario</h2>
          <form action="registro" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="exampleInputEmail1">Ingrese su nombre</label>
              <input type="text" name="nombre" class="form-control" id="input-nombre" placeholder="Nombre de usuario" required>
              <label for="exampleInputEmail1">Ingrese su Password</label>
              <input type="password" name="password" class="form-control" id="input-password" placeholder="Password" required>
              <label for="exampleInputEmail1">Ingrese su Email</label>
              <input type="text" name="email" class="form-control" id="input-email" placeholder="email" required>
              <label for="direccion">Ingrese su dirección</label>
              <input type="text" name="address" class="form-control" id="input-address" placeholder="Dirección">
              <label for="age">Ingrese su edad</label>
              <input type="text" name="age" class="form-control" id="input-age" placeholder="Edad">
              <div class="form-group">
                <label for="phone">Ingrese su Teléfono</label>
                <div class="row">
                  <div class="col-md-3">
                    <%- include("inputCountries.ejs") %>
                  </div>
                  <div class="col-md-9">
                    <input type="text" name="phone" class="form-control" id="input-phone" placeholder="Teléfono" onkeypress="return esNumero(event)">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="profile-picture">Ingrese su Avatar</label>
                <input type="file" name="profile-picture" class="form-control-file" id="profile-picture" required />
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
          </form>
        </br>
        <a href="/login" class="btn btn-warning btn-lg right" role="button">Login</a>
      </div>
    </div>
    <script>
      function esNumero(evt){
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
      }
    </script>
  </body>
</html>